/* common CSS */

*,
*:before,
*:after {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

html {
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
}

blockquote,
body,
button,
dd,
dl,
dt,
fieldset,
form,
h1,
h2,
h3,
h4,
h5,
h6,
hr,
input,
legend,
li,
ol,
p,
pre,
td,
textarea,
th,
ul {
  margin: 0;
  padding: 0;
}

body,
button,
input,
select,
textarea {
  font-family: 'Microsoft Yahei', 'Helvetica';
  border: 0;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-size: 100%;
}

img {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  vertical-align: middle;
  border: 0;
}

ol,
ul,
li {
  list-style: none
}

a {
  text-decoration: none;
  color: black;
  cursor: pointer
}

a:hover {
  text-decoration: none
}

em,
i {
  font-style: normal
}

input:focus {
  outline: none;
}

sup {
  vertical-align: text-top
}

sub {
  vertical-align: text-bottom
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}

td,
th {
  padding: 0;
}

.h-100 {
  height: 100%;
}

html {
  font-size: 45px;
}

body {
  width: 100%;
  position: relative;
  overflow: hidden;
  margin:0 auto;
  max-width:7.5rem;
}


/******************** customer css *************************/

.slider {
  width: 100%;
  height: 100%;
  background: #fff;
  position: relative;
}
@keyframes rotation /*Safari and Chrome*/
{
    0% {
        transform: rotate(0deg);
        -webkit-transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
        -webkit-transform: rotate(360deg);
    }
}
.music-icon {
  width: .46rem;
  height: .46rem;
  background: url(../images/music_icon@2x.png) no-repeat;
   background-size: 100%;
  position: absolute;
  top: .35rem;
  right: .30rem;
  z-index: 10;
  cursor: pointer;
  animation: rotation 2s linear infinite; 
}

.music-off {
  background: url(../images/music-off_icon@2x.png) no-repeat;
  background-size: 100%;
}


/**加载页**/

.p-logo {
  padding-top: 2.78rem;
}

.p-logo p {
  background: url(../images/logo_loading@2x.png) no-repeat;
  background-size: 100%;
  width: 2.81rem;
  height: 1.18rem;
  margin: 0 auto 1.18rem auto;
}

.p-copyright {
  width:100%;
  color: #ccc;
  text-align: center;
  position: absolute;
  line-height: .24rem;
  font-size: .22rem;
  bottom: 1rem;
}

.p-progress {
  text-align: center;
}

#circle-progress {
  width: .84rem;
  height: .84rem;
}


/*****列表****/

.l-list-body {
  margin-left: 2.44rem;
  color: #fff;
  font-size: .36rem;
  padding-top:3.73rem;
}

.l-list-body h1 {
  font-size: .44rem;
  margin-bottom:1.17rem;
}

.l-list-body p {
  margin-bottom: .58rem;
}


/***内容***/

.c-list-body {
  padding: 1.7rem .40rem 0;
  color: #fff;
  font-size: .32rem;
}

.c-list-body h1 {
  font-size: .44rem;
  margin-bottom: .54rem;
}

.c-list-body p {
  margin-bottom: .30rem;
}

.img-list {
  margin-top: 1rem;
  font-size: .28rem;
  width: 100%;
  overflow: hidden;
}

.img-list li {
   width: 50%;
  float:left;
}

.img-item {
  width: 2.73rem;
  height: 4.09rem;
  margin:0 auto;
  text-align: center;
}
.img-item img{
  max-width: 2.73rem;
  max-height: 4.09rem;
}
.img-text{
  position: relative;
  text-align: center;
}
.img-text img{
  width: 0.44rem;
  margin-right: 0.2rem;
}
/****分享页***/

.share {
  padding-top:1.58rem;
  width: 100%;
}
.share .logo{
  margin: 0 auto 1.26rem auto;
  background: url(../images/logo_share@2x.png) no-repeat;
  background-size: 100%;
  width: 2.81rem;
  height: 1.60rem;
}

.s-thanks {
  margin-bottom: .96rem;
  text-align: center;
  font-size: .28rem;
  color: #333;
}

.s-wx {
  text-align: center;
  margin-top: .56rem;
}
.s-wx img{
  width: 1.79rem;
  height: 2.73rem;
}

.btn-share {
  display: block;
  background: url(../images/btn_share@2x.png) no-repeat;
  background-size: 100%;
  width: 2.75rem;
  height: .77rem;
  margin: .94rem auto;
}

.btn-share:active {
  background: url(../images/btn_share_selected@2x.png);
   background-size: 100%;
}

.s-pop {
  display: none;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: url(../images/bg_black@2x.png);
  z-index: 1
}

.s-pop p {
  text-align: center;
  font-size: .36rem;
  color: #fafafa;
  margin-top: 2.95rem;
}

.s-tip {
  display: block;
  background: url(../images/point_icon@2x.png);
  background-size: 100%;
  width: 1.51rem;
  height: 1.09rem;
  top: 1.40rem;
  right: 1.55rem;
  position: absolute;
  z-index: 2;
}
@keyframes swip /*Safari and Chrome*/
{
    0% {
        opacity: 0.3;
       bottom:0.5rem;
    }
    100% {
        opacity: 1;
      bottom:0.3rem;
    }
}
.swip {
  display: none;
  width: .55rem;
  height: .50rem;
  position: absolute;
  bottom: .40rem;
  right: 3.46rem;
  z-index: 10;
  cursor: pointer;
  background: url(../images/next_icon@2x.png);
  background-size: 100%;
  animation: swip 2s linear infinite;
}

.list-bg {
  background: url(../images/bg2x.png) no-repeat;
  background-size: 100%;
}

.content-bg {
  background: url(../images/content-bg@2x.png) no-repeat;
  background-size: 100%;
}